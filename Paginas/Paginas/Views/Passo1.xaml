	<StackLayout Orientation="Horizontal">
		<TableView Intent="Form" HasUnevenRows="true">
			<TableRoot>
				<TableSection>
					<EntryCell Label="Nome" />
					<EntryCell Label="Sobrenome" />
					<ViewCell>
						<DatePicker />
					</ViewCell>
					<ViewCell >
						<StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
							<Label Text="Descreva seu Perfil: " />
							<Editor HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
						</StackLayout>
					</ViewCell>
				</TableSection>
			</TableRoot>
		</TableView>
		<Button Text="Ir pra aba2" Clicked="GoToNextIndex_Clicked" />
		</StackLayout>
	</ContentPage.Content>
